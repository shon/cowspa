# STEP 1 # Code and packages
git clone git@github.com:shon/cowspa.git
virtualenv cowspa
cd cowspa
. ./bin/activate
pip install jinja2 flask redis redisco

# STEP 2 # Backend # Optional for now if you only want to test FE
mkdir data
cd data
wget "redis-latest.tar.gz"
tar zxvf redis-latest.tar.gz
cd redis-latest
make
cd src
./redis-server

# STEP 3 # Frontend
=======
pip install jinja2 flask redisco redis
# test
rm -rf pub; python  fe/build/compile.py
python be/run_webserver.py
firefox http://127.0.0.1:5000/dashboard
